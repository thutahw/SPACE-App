{
  "version": 2,
  "env": {
    "SKIP_PREFLIGHT_CHECK": "true"
  },
  "builds": [
    {
      "src": "apps/api/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["apps/api/**"] }
    },
    {
      "src": "apps/web/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "apps/web/build" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/apps/api/index.js" },
    { "src": "/(.*)", "dest": "/apps/web/build/$1" }
  ]
}